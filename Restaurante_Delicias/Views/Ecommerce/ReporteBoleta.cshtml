@model IEnumerable<Restaurante_Delicias.Models.Cab_boleta>

@{
    ViewData["Title"] = "ReporteBoleta";
}

<section class="py-5">
    <h1 class="text-center text-success">Boletas del Cliente</h1>
    <div class="container px-2 px-lg-3 mt-5">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.num_boleta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.id_cliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fecha_boleta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.total)
                    </th>
                    <th>
                        Consultar Detalles
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.num_boleta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_cliente)
                    </td>
                    <td>
                        @Html.ValueFor(modelItem => item.fecha_boleta, "{0:dd/MM/yyyy}")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.total)
                    </td>
                    <td>
                        @Html.ActionLink("Detalles", "ReporteDetBoleta", new { num_boleta = item.num_boleta }, new {@class = "btn btn-primary"})
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</section>