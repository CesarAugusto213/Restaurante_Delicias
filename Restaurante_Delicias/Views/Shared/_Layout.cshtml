<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurante_Delicias</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurante_Delicias.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ecommerce.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand p-0" href="#!">
                    <img src="~/img/logo.png" width="65px"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li class="nav-item"><a asp-action="Catalogo" asp-controller="Ecommerce" class="nav-link active" aria-current="page">Las Delicias de Martha</a></li>
                    </ul>
                    <a asp-action="ReporteBoleta" asp-controller="Ecommerce" class="btn btn-outline-light mx-2">
                        Facturas del Cliente
                    </a>
                    <form class="d-flex">
                        <a asp-action="Carrito" asp-controller="Ecommerce" class="btn btn-outline-light" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill">@ViewBag.count</span>
                        </a>
                    </form>
                </div>
            </div>
        </nav>
        <div class="bg-dark">
            <img src="~/img/banner.jpg" width="100%"/>
        </div> 
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-4 bg-success">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Delicias de Martha 2022</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
