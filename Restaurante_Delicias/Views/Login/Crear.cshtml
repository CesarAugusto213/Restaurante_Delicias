@model Restaurante_Delicias.Models.Cliente

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Crear Usuario";
}

<section class="py-5">
    <div class="container px-2 px-lg-5 mb-3">
        <div class="mx-auto">
                <div class="form-signin bg-dark rounded-3">
                    <h1 class="text-center text-success mt-4">Crear Usuario</h1>
                    <hr/>
                    <form asp-action="Crear" class="text-white">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label asp-for="nombre" class="control-label"></label>
                            <input asp-for="nombre" class="form-control" placeholder="Ingresar nombre..."/>
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="apellido" class="control-label"></label>
                            <input asp-for="apellido" class="form-control" placeholder="Ingresar apellido..."/>
                            <span asp-validation-for="apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="usuario" class="control-label"></label>
                            <input asp-for="usuario" class="form-control" placeholder="Ingresar usuario..."/>
                            <span asp-validation-for="usuario" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="pass" class="control-label"></label>
                            <input asp-for="pass" class="form-control" placeholder="Ingresar password..."/>
                            <span asp-validation-for="pass" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label asp-for="id_sexo" class="control-label"></label>
                            <select asp-for="id_sexo" asp-items="@ViewBag.sexo" class="form-control" ></select>
                            <span asp-validation-for="id_sexo" class="text-danger"></span>
                        </div>
                        <div class="form-group my-4">
                            <input type="submit" value="Crear" class="btn btn-success" />
                        </div>
                        <div class="form-group my-2">
                            <p>Tienes cuenta?, <a asp-action="Index">iniciar Sesion</a></p>
                        </div>
                    </form>
                    <div>
                        @ViewBag.mensaje
                    </div>
                </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}